defmodule TrafficGrid do
  use GenServer

  def start_link(opts) do
    pids =
      Enum.map(1..5, fn _ ->
        {:ok, pid} = TrafficLightServer.start_link([])
        pid
      end)

    GenServer.start_link(__MODULE__, %{lights: pids, count: 0}, opts)
  end

  def init(color) do
    {:ok, color}
  end

  def transition(pid) do
    GenServer.call(pid, :transition)
  end

  def current_lights(pid) do
    GenServer.call(pid, :current_lights)
  end

  def handle_call(:current_lights, _from, color) do
    light_colors = Enum.map(color.lights, fn pid -> TrafficLightServer.current_light(pid) end)
    {:reply, light_colors, color}
  end

  def handle_call(:transition, _from, color) do
    light_transition = Enum.at(color.lights, color.count)
    TrafficLightServer.transition(light_transition)
    new_count = if color.count == 4, do: 0, else: color.count + 1
    light_colors = Enum.map(color.lights, fn pid -> TrafficLightServer.current_light(pid) end)
    {:reply, light_colors, %{color | count: new_count}}
  end
end
