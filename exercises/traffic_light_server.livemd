    response = {:ok, new_state}
    {:reply, response, new_state}
  end

  def handle_call(:transition, :red) do
    new_state = :green
    response = {:ok, new_state}
    {:reply, response, new_state}
  end

  def handle_call(:current_light, :green) do
    state = :green
    response = {:ok, state}
    {:reply, response, state}
  end

  def handle_call(:current_light, :yellow) do
    state = :yellow
    response = {:ok, state}
    {:reply, response}
  end

